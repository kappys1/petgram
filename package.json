{
  "name": "petgram-platzi-react-avanzado",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "cypress open",
    "test:ci": "CI=false yarn test --verbose --coverage --reporters=default --reporters=jest-junit --reporters=jest-html-reporter",
    "build": "webpack --config webpack.prod.js",
    "lint": "standard",
    "serve:dev": "webpack --mode 'production' --config webpack.prod.js && npx serve dist -s",
    "dev": "webpack-dev-server --config webpack.dev.js",
    "now-build": "npm run build",
    "prepare": "husky install",
    "version": "webpack-dev-server -v"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kappys1/petgram.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kappys1/petgram.git/issues"
  },
  "homepage": "https://github.com/kappys1/petgram.git#readme",
  "devDependencies": {
    "@apollo/react-testing": "^4.0.0",
    "@babel/core": "^7.15.5",
    "@babel/preset-env": "^7.15.6",
    "@babel/preset-react": "^7.14.5",
    "@testing-library/dom": "^8.5.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.1.0",
    "@testing-library/react-hooks": "^7.0.2",
    "babel-jest": "^27.2.1",
    "babel-loader": "^8.2.2",
    "cypress": "^8.3.1",
    "html-webpack-plugin": "^5.3.2",
    "husky": "^7.0.2",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.2.1",
    "jest-html-reporter": "^3.4.1",
    "jest-junit": "^12.2.0",
    "jest-prop-type-error": "^1.1.0",
    "jest-transform-stub": "^2.0.0",
    "react-test-renderer": "^17.0.2",
    "regenerator-runtime": "^0.13.9",
    "standard": "^16.0.3",
    "webpack": "^5.53.0",
    "webpack-cli": "^4.8.0",
    "webpack-dev-server": "^4.2.1",
    "webpack-merge": "^5.8.0",
    "webpack-pwa-manifest": "^4.3.0",
    "workbox-webpack-plugin": "^6.3.0"
  },
  "dependencies": {
    "@apollo/client": "^3.4.13",
    "@reach/router": "^1.3.4",
    "apollo-boost": "^0.4.9",
    "graphql": "^15.6.0",
    "intersection-observer": "^0.12.0",
    "prop-types": "^15.7.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-helmet": "^6.1.0",
    "react-icons": "^4.2.0",
    "styled-components": "^5.3.1"
  },
  "standard": {
    "ignore": [
      "/api/**"
    ]
  },
  "eslintConfig": {
    "extends": [
      "standard",
      "./node_modules/standard/eslintrc.json"
    ]
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/jest/mocks/jest.setup.js",
      "jest-prop-type-error"
    ],
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/**/styles.{js,jsx}",
      "!**/node_modules/**",
      "!src/assets/**",
      "!src/App.js",
      "!src/index.js",
      "!src/Context.js",
      "!src/styles/**",
      "!src/pages/**"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx,ts,tsx}",
      "<rootDir>/src/**/*.{spec,test}.{js,jsx,ts,tsx}"
    ],
    "moduleNameMapper": {
      ".+\\.(css|styl|less|sass|scss|png|jpg|ttf|woff|woff2)$": "jest-transform-stub"
    },
    "coveragePathIgnorePatterns": [
      "src/serviceWorker.js"
    ],
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$",
      "^.+\\.module\\.(css|sass|scss)$"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "cypress"
    ],
    "resetMocks": true,
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "lines": 90,
        "functions": 90,
        "statements": 90
      }
    }
  }
}
